<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/movie_video_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_list_item"
        android:layout_marginLeft="@dimen/material_margin"

        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/video_chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_chevron_up" />

        <TextView
            android:id="@+id/video_type_title"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="@dimen/material_margin"
            android:layout_marginRight="@dimen/material_margin"
            tools:text="Trailer" />

    </LinearLayout>
</FrameLayout>